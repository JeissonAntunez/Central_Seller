{
  "compilerOptions": {
    "target": "ES2022",

    "module": "Node16",
    "moduleResolution": "nodenext",

    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "types": ["node"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "skipLibCheck": true
  }
}
